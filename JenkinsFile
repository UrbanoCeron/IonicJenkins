pipeline {
   agent any
   environment {
      IMAGE_VERSION = '1.0.0'
   }
   tools {
        gradle 'Gradle5'
   }
   stages {
      stage('NPM Install') {
         steps {
            sh 'npm install'
         }
      }
      // stage('Add Enviroment Android') {
      //    steps {
      //       sh 'ls /Users/Shared/Jenkins/Library/Android/sdk'
      //    }
      // }
      stage('Build Android') {
         steps {
            sh 'ionic cordova platform rm android'
            sh 'ionic cordova platform add android@7.0.0'
            sh 'ionic cordova build android --release'
            // sh 'gradle -v'
         }
      }
   }
}
